{
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": false,
    "moduleResolution": "node",
    "allowJs": false,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "noImplicitThis": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": true,
    "downlevelIteration": true,
    "alwaysStrict": false,
    "lib": ["DOM", "ES2020"],
    "noImplicitUseStrict": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "ES5"
  },
  "exclude": ["node_modules"],
  "include": ["scripts"]
}
